doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    title #{meta.title}
    meta(name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0")
    style(type="text/css").
      html {
        position: fixed;
        font-size: 15px;
      }

      body {
        margin: 0;
        overflow: hidden;
        font-size: 1rem;
        color: white;
        background-color: transparent;
      }

      .overlay-session-interrupted {
        position: absolute;
        top: 0;
        left: 0;
        display: none;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        font-size: 4rem;
        background-color: rgba(0, 0, 0, 0.7);
      }

      .overlay-session-interrupted--active {
        display: flex;
      }

  body
    main
      .overlay-session-interrupted
        | Session interrupted
    block content
